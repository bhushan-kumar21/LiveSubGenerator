<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:LiveSubgenerator.ViewModels"
        x:Class="LiveSubgenerator.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Live Subtitles"
        Width="600" Height="200"
        Background="Transparent"
        TransparencyLevelHint="Transparent"
        SystemDecorations="None"
        Topmost="True"
        CanResize="True">

	<Grid RowDefinitions="Auto, *">
		<Border Grid.Row="0" Background="#CC222222" CornerRadius="5,5,0,0"
                PointerPressed="OnPointerPressed">
			<DockPanel Margin="10,5">
				<Button Content="_" Click="OnMinimizeClick" DockPanel.Dock="Right"
                        Background="Transparent" Foreground="White"/>

				<StackPanel Orientation="Horizontal" Spacing="10">
					<TextBlock Text="Language:" VerticalAlignment="Center" Foreground="Gray" FontSize="12"/>
					<ComboBox SelectedIndex="0"
                              Width="120"
                              ItemsSource="{Binding AvailableLanguages}"
                              SelectedItem="{Binding SelectedLanguage}">
					</ComboBox>
				</StackPanel>
			</DockPanel>
		</Border>

		<Border Grid.Row="1" Background="#AA000000" CornerRadius="0,0,5,5">
			<TextBlock Text="{Binding SubtitleText}"
                       Foreground="White" FontSize="24" FontWeight="Bold"
                       TextAlignment="Center" VerticalAlignment="Center"
                       TextWrapping="Wrap" Margin="10"/>
		</Border>
	</Grid>
</Window>